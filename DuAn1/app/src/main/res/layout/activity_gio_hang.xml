<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GioHangActivity"
    android:weightSum="7"
    >
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#707070"
        android:titleTextColor="@color/white"
        android:title="Giỏ hàng"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ListView
                android:id="@+id/lvGioHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/tvThongBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giỏ hàng đang con trống"
                android:textSize="27sp"
                />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Tổng tiền: "
            android:textColor="#ff0000"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/tvTongTienGioHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="2000 VNĐ"
            android:textColor="#ff0000"
            android:layout_margin="5dp"
            android:gravity="end"
            />
        
    </LinearLayout>

    <Button
        android:id="@+id/btnThanhToanHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán giỏ hàng"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:backgroundTint="#DFDFDF"
        android:textColor="#2196F3"
        />

    <Button
        android:id="@+id/btnTiepTucMuaHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục mua hàng"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:backgroundTint="#DFDFDF"
        android:textColor="#2196F3"
        />

</LinearLayout>